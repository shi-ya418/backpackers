.contents.row
  %h2 
    ="#{@user.username}さんのマイページ"
.follow
  - if user_signed_in? && @user != current_user
    .follow_form
      - if current_user.following?(@user)
        = render "unfollow"
      - else
        = render "follow"
=render partial: '/posts/post', locals: { post: @post}
.like
  .like__title
    いいねしている投稿
  .like__lists
    - @user.liked_posts.each do |post|
      .like__list
        = post.text

