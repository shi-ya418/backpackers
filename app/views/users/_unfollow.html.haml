.following
  = link_to "フォロー中", followings_user_path(@user)
  = "#{@user.followings.count}人"
.followers
  = link_to "フォロワー", followers_user_path(@user)
  = "#{@user.followers.count}人"

= form_with(model: current_user.following_relationships.find_by(following_id: @user.id),method: :delete) do |f|
  = f.hidden_field :following_id 
  = f.submit "フォローを外す", class: "btn"
    