.main
  .post
    .post-box
      = @posts.each do |post|
        .post__user-name
          takuya
        %ul.more-list
          %li.show
            = link_to "詳細", post_path(post.id), method: :get
          %li.edit
            = link_to "編集", edit_post_path(post.id), method: :get
          %li.delete
            = link_to "削除", post_path(post.id), method: :delete
        .post-text
          = post.text
        .post-inofo
          .post-date
            2020/01/01 00:00
          .post-good
            good